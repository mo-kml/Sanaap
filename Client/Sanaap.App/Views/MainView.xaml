<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sanaap.App.Views.MainView">
    <StackLayout>

        <StackLayout VerticalOptions="Start">
            <Button Text="کمکم کنید" Margin="15, 60, 15, 0" Command="{Binding SubmitSosRequest}" />
            <Button Text="درخواست های من" Margin="15, 10, 15, 0" Command="{Binding GoToMySosRequests}" />
        </StackLayout>

        <StackLayout VerticalOptions="CenterAndExpand">
            <Button Text="درخواست کمک تلفنی" Margin="15, 0, 15, 0" Command="{Binding SubmitSosRequestByCall}" />
        </StackLayout>

        <StackLayout VerticalOptions="End" HorizontalOptions="Center">
            <Button BackgroundColor="#ff9d9d" Text="خروج" Command="{Binding Logout}" Margin="10"/>
        </StackLayout>

    </StackLayout>

</ContentPage>