<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sanaap.App.Views.LoginView" Title="" FlowDirection="RightToLeft">

    <StackLayout Orientation="Vertical" >
        <Entry MaxLength="10" Keyboard="Numeric" Placeholder="کد ملی" Margin="0, 30, 0, 0" Text="{Binding NationalCode}" />
        <Entry MaxLength="11" Keyboard="Numeric" Placeholder="شماره موبایل (شروع با 09)" Text="{Binding Mobile}" />
        <Button Text="ورود" Command="{Binding StartLogin}" />
    </StackLayout>

</ContentPage>
    