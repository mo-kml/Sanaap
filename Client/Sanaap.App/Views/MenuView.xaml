<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sanaap.App.Views.MenuView"
             Title="منو">

    <MasterDetailPage.Master>
        <ContentPage Title="منو">
            <ScrollView>
                <StackLayout>

                    <Button VerticalOptions="Start" Margin="20" Text="درخواست های من" Command="{Binding GoToMySosRequests}" />

                    <Button VerticalOptions="EndAndExpand" HorizontalOptions="Center" BackgroundColor="#ff9d9d" Text="خروج" Command="{Binding Logout}" Margin="5"/>

                </StackLayout>
            </ScrollView>
        </ContentPage>
    </MasterDetailPage.Master>

</MasterDetailPage>