<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ff="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
             xmlns:forms="clr-namespace:Lottie.Forms;assembly=Lottie.Forms"
             x:Class="Sanaap.App.Views.EvlExpertRequestWaitView" BackgroundColor="Transparent">

    <StackLayout>
        <ff:SvgCachedImage IsVisible="{Binding IsVisibleAfter}" Source="resource://Sanaap.App.Images.checked.svg" HorizontalOptions="Center" WidthRequest="60" Margin="0,10,0,0"/>
        <Label Text="{Binding Message}" HorizontalOptions="Center" Margin="10"/>
        <forms:AnimationView x:Name="animationView" Animation="motorcycle.json"
            Loop="True" AutoPlay="True"
            Margin="0,0,0,100" WidthRequest="10" HeightRequest="300"
            IsVisible="{Binding IsVisibleBefore}" BackgroundColor="Transparent" />
        <Button Text="انصراف" IsVisible="{Binding IsVisibleBefore}" Command="{Binding GoToMain}" VerticalOptions="EndAndExpand"/>

        <Label Text="{Binding FullName, StringFormat='نام کارشناس : {0}'}" HorizontalOptions="Center" Margin="0,90,0,0"/>
        <Label Text="{Binding Mobile, StringFormat='موبایل کارشناس : {0}'}" HorizontalOptions="Center"/>
        <Button Text="تماس با کارشناس سیار" BackgroundColor="Transparent" HorizontalOptions="Center" BorderWidth="1.5" Command="{Binding Call}"/>
        <Image Aspect="AspectFit" Source="{Binding ImageSource}"/>
        <!--<Label Text="نام کارشناس"/>
        <Button VerticalOptions="EndAndExpand" Text="انصراف" Command="{Binding GoToMain}"/>-->

        <ff:SvgCachedImage Source="{Binding Image}" Aspect="AspectFill" HeightRequest="100" WidthRequest="100"/>

    </StackLayout>

</ContentPage>
