<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sanaap.App.Views.RegisterView" Title="">

    <ScrollView>
        <StackLayout>

            <StackLayout VerticalOptions="Start">
                <Entry MaxLength="20" Placeholder="نام" Margin="15, 30, 15, 0" Text="{Binding Customer.FirstName}" />
                <Entry MaxLength="40" Placeholder="نام خانوادگی" Text="{Binding Customer.LastName}" />
                <Entry MaxLength="10" Keyboard="Numeric" Placeholder="کد ملی" Text="{Binding Customer.NationalCode}" />
                <Entry MaxLength="11" Keyboard="Numeric" Placeholder="شماره موبایل (شروع با 09)" Text="{Binding Customer.Mobile}" />
                <Button Text="ثبت نام" Command="{Binding Register}" />
            </StackLayout>

            <StackLayout VerticalOptions="EndAndExpand">
                <Label HorizontalTextAlignment="Center" Text="قبلا ثبت نام کرده اید؟"/>
                <Button Text="وارد شوید" BackgroundColor="Purple" Command="{Binding Login}" Margin="15,0,15,5" />
            </StackLayout>

        </StackLayout>
    </ScrollView>

</ContentPage>
