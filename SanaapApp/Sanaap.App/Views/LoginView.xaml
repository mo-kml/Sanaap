<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sanaap.App.Views.LoginView" Title="">

    <StackLayout Orientation="Vertical">
        <Entry MaxLength="10" Keyboard="Numeric" Placeholder="کد ملی" Margin="15, 30, 15, 0" Text="{Binding NationalCode}" />
        <Entry MaxLength="11" FlowDirection="LeftToRight" Keyboard="Numeric" Placeholder="شماره موبایل (شروع با 09)" Text="{Binding Mobile}" />
        <Button Text="ورود" BackgroundColor="Purple" Command="{Binding Login}" />
        <ActivityIndicator/>
    </StackLayout>

</ContentPage>
