<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Sanaap.App.Controls"
             FlowDirection="LeftToRight"
             xmlns:b="clr-namespace:Prism.Behaviors;assembly=Prism.Forms"
             x:Class="Sanaap.App.Views.Content.ContentListView"
             ControlTemplate="{StaticResource MasterTemplate}">
    <ContentPage.Content>
        <AbsoluteLayout>
            <ListView HasUnevenRows="True" AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All"
                      ItemsSource="{Binding Contents}">
                <ListView.Behaviors>
                    <b:EventToCommandBehavior EventName="ItemTapped" 
                                              EventArgsParameterPath="Item" 
                                              Command="{Binding ShowContent}" />
                </ListView.Behaviors>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>


                            <Grid Margin="7,5,7,5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="15"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="200*"/>
                                </Grid.ColumnDefinitions>
                                <Frame CornerRadius="5" Grid.RowSpan="2" Margin="10,0,0,0">
                                    <Image Aspect="AspectFill"  Source="{Binding Image}"  BackgroundColor="Gray"  Margin="-20,-20,-20,-20"/>
                                </Frame>
                                <Label TextColor="Black" FontSize="17" FontAttributes="Bold" Text="{Binding Title}"  Grid.Column="1"/>
                                <!-- Main Text Needed To Add In DTO <Label FontSize="12" Text="{Binding MainText}"  Grid.Column="1" Grid.Row="1" LineBreakMode="TailTruncation" HeightRequest="30"/>-->
                                <StackLayout Orientation="Horizontal" HorizontalOptions="Start" Grid.Row="2" Margin="0,0,0,-5">
                                    <local:IconLabel Text="{Binding LikesCount,StringFormat='&#xf004; {0}'}" Margin="0,0,0,-5" FontSize="12">
                                        <local:IconLabel.Triggers>
                                            <DataTrigger TargetType="local:IconLabel"
                                                     Binding="{Binding IsLiked}"
                                                     Value="true">
                                                <Setter Property="Type" Value="Solid"/>
                                                <Setter Property="TextColor" Value="Green"/>
                                            </DataTrigger>
                                            <DataTrigger TargetType="local:IconLabel"
                                                     Binding="{Binding IsLiked}"
                                                     Value="false">
                                                <Setter Property="Type" Value="Regular"/>
                                                <Setter Property="TextColor" Value="Black"/>
                                            </DataTrigger>
                                        </local:IconLabel.Triggers>
                                    </local:IconLabel>
                                    
                                </StackLayout>
                                <Label Grid.Column="1" Grid.Row="2" HorizontalOptions="End" Font="13" Text="{Binding CreateDate,StringFormat='{0:M/d/yy}'}"/>
                            </Grid>

                            <!--<Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackLayout Padding="5">
                                    <local:IconLabel Type="Solid" Text="{Binding LikesCount,StringFormat='&#xf004; {0}'}" VerticalOptions="StartAndExpand"/>

                                    <Label Text="{Binding CreateDate,StringFormat='{0:M/d/yy}'}"/>
                                </StackLayout>

                                <Label Grid.Column="1" Text="{Binding Title}" HorizontalTextAlignment="End" VerticalOptions="StartAndExpand"/>

                                <Image HeightRequest="80" WidthRequest="80" Grid.Column="2" Source="{Binding Image}" Aspect="AspectFill"/>
                            </Grid>-->
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <local:IconButton Type="Solid" Text="&#xf0b0;" Command="{Binding FilterContent}" Margin="10" AbsoluteLayout.LayoutBounds="0,1,70,70" AbsoluteLayout.LayoutFlags="PositionProportional"/>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
