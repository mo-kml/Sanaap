<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sanaap.App.Controls.SanaapEntry" x:Name="sanaapEntry">
    <ContentView.Content>
        <Frame BindingContext="{x:Reference sanaapEntry}" Padding="1" BackgroundColor="{Binding BorderColor}" HasShadow="False" CornerRadius="5">
            <Frame BackgroundColor="White" HasShadow="False" Padding="1" CornerRadius="5">
                <StackLayout BackgroundColor="White" HorizontalOptions="FillAndExpand">
                    <Entry MaxLength="{Binding MaxLength}" Keyboard="{Binding Keyboard}" Text="{Binding Text}" FontFamily="{Binding FontFamily}" BackgroundColor="Transparent" Placeholder="{Binding Placeholder}" PlaceholderColor="{Binding PlaceholderColor}" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                </StackLayout>
            </Frame>
        </Frame>
    </ContentView.Content>
</ContentView>
