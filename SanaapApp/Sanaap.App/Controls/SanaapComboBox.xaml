<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sanaap.App.Controls.SanaapComboBox"
             xmlns:controls="clr-namespace:Sanaap.App.Controls"
             xmlns:control="clr-namespace:Sanaap.App.Controls"
             xmlns:comboBox="clr-namespace:Syncfusion.XForms.ComboBox;assembly=Syncfusion.SfComboBox.XForms"
             x:Name="sanaapComboBox">
    <ContentView.Content>
        <comboBox:SfComboBox BindingContext="{x:Reference sanaapComboBox}" Text="{Binding Text}" DataSource="{Binding DataSource}" DisplayMemberPath="{Binding DisplayMemberPath}"/>
    </ContentView.Content>
</ContentView>
